@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>選手註冊</title>
    <link rel="icon" href="~/img/favicon.svg" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/css/registerStyle.css" rel="stylesheet" />
    <script src="~/bootstrap/js/bootstrap.js"></script>
</head>
<body>
    <div class="register-container">
        <div class="text-center">
            <img src="~/img/NSTClogo.png" class="img-fluid" style="max-width: 200px;" alt="NSTCLogo" />
            <img src="~/img/logo.svg" alt="Logo圖標" style="height: 45px; width: 100%;">
        </div>
        <form action="/Account/RegisterAthlete" method="post">
            <div class="form-group">
                <label for="AthleteNumber" title="選手編號">選手編號</label>
                <input type="text" class="form-control" id="AthleteNumber" name="athleteNumber" placeholder="請輸入選手編號" required>
            </div>
            <div class="form-group">
                <label for="Username" title="選手姓名">姓名</label>
                <input type="text" class="form-control" id="Username" name="userName" placeholder="請輸入姓名" required>
            </div>
            <div class="form-group">
                <label for="Password" title="密碼">密碼</label>
                <input type="password" class="form-control" id="Password" name="password" placeholder="請輸入密碼" required>
            </div>
            <div class="form-group">
                <label for="Email" title="電子郵件">電子郵件</label>
                <input type="email" class="form-control" id="Email" name="email" placeholder="請輸入電子郵件" required>
            </div>
            <div class="form-group">
                <label for="GenderID" title="性別">性別</label>
                <select class="form-control" id="GenderID" name="GenderID" required>
                    <option value="">請選擇性別</option>
                    @foreach (var gender in ViewBag.GenderList)
                    {
                        <option value="@gender.GenderID">@((gender.Male == true ? "男" : "女"))</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="BirthDate" title="出生日期">出生日期</label>
                <input type="date" class="form-control" id="BirthDate" name="birthDate" placeholder="請輸入出生日期" required>
            </div>
            @*<div class="form-group">
                    <label for="SportSpecialization" title="運動專項">運動專項</label>
                    <input type="text" class="form-control" id="SportSpecialization" name="sportSpecialization" placeholder="請輸入運動專項" required>
                </div>*@
            <div class="form-group">
                <label for="SportSpecialization" title="運動專項">運動項目</label>
                <select class="form-control" id="SportSpecialization" name="sportSpecialization" required>
                    <option value="">請選擇運動項目</option>
                    @foreach (var item in ViewBag.SportTypeList as List<SelectListItem>)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>

            <button type="submit" class="btn btn-primary btn-block" title="註冊">註冊</button>
        </form>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
    </div>
</body>
</html>
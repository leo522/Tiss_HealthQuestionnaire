@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>選擇身份</title>
    <link rel="icon" href="~/img/favicon.svg" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/loginStyle.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-lg p-4 bg-white bg-opacity-90">
                    <div class="text-center mb-4">
                        <img src="~/img/NSTClogo.png" class="img-fluid" style="max-width: 200px;" alt="NSTCLogo"/>
                        <img src="~/img/logo.svg" class="img-fluid" style="max-width: 200px;" alt="Logo" />
                    </div>

                    <h2 class="text-center text-primary mb-4">請選擇身份</h2>

                    <div class="d-grid gap-3">
                        <a href="@Url.Action("Login", "Account", new { role = "athlete" })" class="btn btn-primary btn-lg">選手登入</a>
                        <a href="@Url.Action("Login", "Account", new { role = "trainer" })" class="btn btn-success btn-lg">防護員登入</a>
                        <a href="@Url.Action("Login", "Account", new { role = "admin" })" class="btn btn-danger btn-lg">管理員登入</a>
                    </div>

                    <div class="text-center mt-4 text-muted">
                        <span class="d-inline-block">
                            <a href="@Url.Action("SelectRole", "Account", new { role = "athlete" })" class="text-decoration-none">註冊選手帳號</a> |
                            <a href="@Url.Action("SelectRole", "Account", new { role = "trainer" })" class="text-decoration-none">註冊防護員帳號</a> |
                            <a href="@Url.Action("SelectRole", "Account", new { role = "admin" })" class="text-decoration-none">註冊管理員帳號</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
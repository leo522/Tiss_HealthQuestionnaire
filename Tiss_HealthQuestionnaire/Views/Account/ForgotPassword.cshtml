@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>重設密碼</title>
    <link rel="icon" href="~/img/favicon.svg" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/loginStyle.css" rel="stylesheet" />
    <script src="~/SweetAlert2/sweetalert2.all.min.js"></script>
</head>
<body style="overflow-x: hidden;">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card p-4 shadow" style="width: 100%; max-width: 480px;">
            <h1 class="mb-4 text-center">重設密碼</h1>

            <form method="post" action="/Account/ForgotPassword">
                <div class="form-group">
                    <label>身份</label>
                    <select name="role" class="form-control" required>
                        <option value="">請選擇身份</option>
                        <option value="athlete">選手</option>
                        <option value="trainer">防護員</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>帳號</label>
                    <input type="text" name="account" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>新密碼</label>
                    <input type="password" name="newPassword" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>再次輸入新密碼</label>
                    <input type="password" name="confirmPassword" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary btn-block">確認重設</button>
            </form>
        </div>
    </div>

    @if (ViewBag.Message != null)
    {
        <script>
            window.onload = function () {
                Swal.fire({
                    icon: 'success',
                    title: '密碼重設成功',
                    text: '@ViewBag.Message',
                    confirmButtonText: '前往登入',
                    allowOutsideClick: false
                }).then(() => {
                    window.location.href = '/Account/Login';
                });
            };
        </script>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <script>
            window.onload = function () {
                Swal.fire({
                    icon: 'error',
                    title: '錯誤',
                    text: '@ViewBag.ErrorMessage',
                    confirmButtonText: '我知道了'
                });
            };
        </script>
    }
</body>
</html>
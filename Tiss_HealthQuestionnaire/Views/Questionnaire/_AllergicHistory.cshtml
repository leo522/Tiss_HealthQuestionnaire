@*過敏史*@
@model IEnumerable<Tiss_HealthQuestionnaire.Models.AllergicHistory>

<div class="p-4 font-sans">
    <h3 class="text-lg md:text-xl font-bold mb-4">過敏史 Allergic History:</h3>

    <div class="overflow-x-auto">
        <table class="min-w-full border border-gray-300">
            <thead>
                <tr class="bg-gray-200">
                    <th class="border border-gray-300 px-4 py-2">項目 Item</th>
                    <th class="border border-gray-300 px-4 py-2">否 No</th>
                    <th class="border border-gray-300 px-4 py-2">是 Yes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-100">
                        <td class="border border-gray-300 px-4 py-2">
                            <span class="block font-medium">@item.ItemZh</span>
                            <span class="block text-sm text-gray-600">@item.ItemEn</span>
                        </td>
                        <td class="border border-gray-300 px-4 py-2 text-center">
                            <input type="radio" id="allergy_@item.ID" name="allergy_@item.ID" value="no" class="form-radio h-5 w-5 text-blue-600" required>
                            <label for="allergy_@item.ID">否</label>
                        </td>
                        <td class="border border-gray-300 px-4 py-2 text-center">
                            <input type="radio" id="allergy_@item.ID" name="allergy_@item.ID" value="yes" class="form-radio h-5 w-5 text-blue-600" required>
                            <label for="allergy_@item.ID" class="ml-2">是</label>
                            <input type="text" name="details_@item.ID" class="w-full mt-2 p-2 border border-gray-300 rounded" placeholder="請描述..." required>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@model IEnumerable<Tiss_HealthQuestionnaire.Models.OrthopaedicScreening>
<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>骨科篩檢問卷</title>
</head>
<body>
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">骨科篩檢問卷</h1>

        <table class="min-w-full table-auto border-collapse border border-gray-300">
            <thead>
                <tr>
                    <th class="border border-gray-300 px-4 py-2">項次</th>
                    <th class="border border-gray-300 px-4 py-2">指示操作</th>
                    <th class="border border-gray-300 px-4 py-2">觀察重點</th>
                    <th class="border border-gray-300 px-4 py-2">結果</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="border border-gray-300 px-4 py-2 text-center">@item.Id</td>
                        <td class="border border-gray-300 px-4 py-2">@item.Instructions</td>
                        <td class="border border-gray-300 px-4 py-2">@item.ObservationPoints</td>
                        <td class="border border-gray-300 px-4 py-2">
                            <div class="flex justify-around">
                                <label>
                                    <input type="radio" name="result_@item.Id" value="@item.ResultNormal" class="mr-2"> 正常
                                </label>
                                <label>
                                    <input type="radio" name="result_@item.Id" value="@item.ResultAbnormal" class="mr-2"> 異常
                                </label>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
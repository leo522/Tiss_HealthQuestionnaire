@*過去傷害狀況(已復原)-傷勢類型*@
@model IEnumerable<Tiss_HealthQuestionnaire.Models.PastInjuryType>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="p-4">
        <h2 class="text-xl font-bold mb-4">2.傷勢類型 Injury Types</h2>

        <div class="grid grid-cols-3 gap-4">
            <!-- 肌肉/肌腱類 -->
            <div>
                <h3 class="font-bold mb-2 border-b border-gray-400">肌肉/肌腱</h3>
                @foreach (var item in Model)
                {
                    if (!String.IsNullOrEmpty(item.MuscleTendon))
                    {
                        <div class="mt-2">
                            <label class="inline-flex items-center">
                                <input type="checkbox" name="PastmuscleTendon_@item.Id" class="form-checkbox h-5 w-5 text-blue-600 mr-2">
                                <span>@item.MuscleTendon</span>
                            </label>
                        </div>
                    }
                }
            </div>

            <!-- 骨類 -->
            <div>
                <h3 class="font-bold mb-2 border-b border-gray-400">骨類</h3>
                @foreach (var item in Model)
                {
                    if (!String.IsNullOrEmpty(item.Bone))
                    {
                        <div class="mt-2">
                            <label class="inline-flex items-center">
                                <input type="checkbox" name="Pastbone_@item.Id" class="form-checkbox h-5 w-5 text-blue-600 mr-2">
                                <span>@item.Bone</span>
                            </label>
                        </div>
                    }
                }
            </div>

            <!-- 韌帶類 -->
            <div>
                <h3 class="font-bold mb-2 border-b border-gray-400">韌帶類</h3>
                @foreach (var item in Model)
                {
                    if (!String.IsNullOrEmpty(item.Ligament))
                    {
                        <div class="mt-2">
                            <label class="inline-flex items-center">
                                <input type="checkbox" name="Pastligament_@item.Id" class="form-checkbox h-5 w-5 text-blue-600 mr-2">
                                <span>@item.Ligament</span>
                            </label>
                        </div>
                    }
                }
            </div>

            <!-- 神經類 -->
            <div>
                <h3 class="font-bold mb-2 border-b border-gray-400">神經類</h3>
                @foreach (var item in Model)
                {
                    if (!String.IsNullOrEmpty(item.Nerve))
                    {
                        <div class="mt-2">
                            <label class="inline-flex items-center">
                                <input type="checkbox" name="Pastnerve_@item.Id" class="form-checkbox h-5 w-5 text-blue-600 mr-2">
                                <span>@item.Nerve</span>
                            </label>
                        </div>
                    }
                }
            </div>

            <!-- 軟骨/滑膜/滑囊類 -->
            <div>
                <h3 class="font-bold mb-2 border-b border-gray-400">軟骨/滑膜/滑囊類</h3>
                @foreach (var item in Model)
                {
                    if (!String.IsNullOrEmpty(item.CartilageSynoviumBursa))
                    {
                        <div class="mt-2">
                            <label class="inline-flex items-center">
                                <input type="checkbox" name="PastcartilageSynoviumBursa_@item.Id" class="form-checkbox h-5 w-5 text-blue-600 mr-2">
                                <span>@item.CartilageSynoviumBursa</span>
                            </label>
                        </div>
                    }
                }
            </div>

            <!-- 表皮組織 -->
            <div>
                <h3 class="font-bold mb-2 border-b border-gray-400">表皮組織</h3>
                @foreach (var item in Model)
                {
                    if (!String.IsNullOrEmpty(item.EpidermalTissue))
                    {
                        <div class="mt-2">
                            <label class="inline-flex items-center">
                                <input type="checkbox" name="PastepidermalTissue_@item.Id" class="form-checkbox h-5 w-5 text-blue-600 mr-2">
                                <span>@item.EpidermalTissue</span>
                            </label>
                        </div>
                    }
                }
            </div>

            <!-- 血管類 -->
            <div>
                <h3 class="font-bold mb-2 border-b border-gray-400">血管類</h3>
                @foreach (var item in Model)
                {
                    if (!String.IsNullOrEmpty(item.BloodVessel))
                    {
                        <div class="mt-2">
                            <label class="inline-flex items-center">
                                <input type="checkbox" name="PastbloodVessel_@item.Id" class="form-checkbox h-5 w-5 text-blue-600 mr-2">
                                <span>@item.BloodVessel</span>
                            </label>
                        </div>
                    }
                }
            </div>

            <!-- 器官/四肢類 -->
            <div>
                <h3 class="font-bold mb-2 border-b border-gray-400">器官/四肢類</h3>
                @foreach (var item in Model)
                {
                    if (!String.IsNullOrEmpty(item.OrganLimb))
                    {
                        <div class="mt-2">
                            <label class="inline-flex items-center">
                                <input type="checkbox" name="PastorganLimb_@item.Id" class="form-checkbox h-5 w-5 text-blue-600 mr-2">
                                <span>@item.OrganLimb</span>
                            </label>
                        </div>
                    }
                }
            </div>
        </div>

        <!-- 治療方式表單（最初是隱藏的） -->
        <div id="treatment-method-section" class="hidden mt-4">
            <!-- 這裡是下一個部分視圖的容器 -->
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // 當用戶在 "傷勢類型" 部分選擇複選框時顯示 "治療方式" 部分
            $('.Pastinjury-checkbox').change(function () {
                if ($('.Pastinjury-checkbox:checked').length > 0) {
                    // 動態載入治療方式的部分視圖
                    $.get('/Questionnaire/PastTreatmentMethod', function (data) {
                        $('#treatment-method-section').html(data).removeClass('hidden');
                    });
                } else {
                    $('#treatment-method-section').addClass('hidden');
                }
            });
        });
    </script>
</body>
</html>
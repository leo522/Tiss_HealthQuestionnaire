@*營養品*@
@model IEnumerable<Tiss_HealthQuestionnaire.Models.PastSupplements>
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>過去一年常規使用的補充品</title>
</head>
<body>
    <div class="p-4">
        <h3 class="text-xl font-bold mb-4">補充品：過去一年常規使用的補充品 Regularly Used Supplements in the Past Year</h3>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-300">
                <thead>
                    <tr class="bg-gray-100">
                        <th class="border border-gray-300 px-4 py-2">項目 Item</th>
                        <th class="border border-gray-300 px-4 py-2 text-center">是否使用過 Use</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-100">
                            <td class="border border-gray-300 px-4 py-2">
                                <span class="block font-medium">@item.ItemZh</span>
                                <span class="block text-sm text-gray-600">@item.ItemEn</span>
                            </td>
                            <td class="border border-gray-300 px-4 py-2 text-center">
                                <input type="checkbox" name="usedSupplements_@item.ID" class="form-checkbox h-5 w-5 text-blue-600">
                                <label class="ml-2">是</label>
                            </td>
                        </tr>
                    }
                    <tr class="hover:bg-gray-100">
                        <td class="border border-gray-300 px-4 py-2">
                            <span class="block font-medium">其他 Others，請詳述：</span>
                        </td>
                        <td class="border border-gray-300 px-4 py-2">
                            <div class="flex items-center">
                                <input type="checkbox" name="usedSupplement_other" class="form-checkbox h-5 w-5 text-blue-600">
                                <input type="text" name="otherSupplementDetail" class="border rounded p-2 ml-2 w-full" placeholder="請描述...">
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
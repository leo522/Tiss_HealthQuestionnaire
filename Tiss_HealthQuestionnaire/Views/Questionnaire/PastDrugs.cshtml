@*藥物史*@
@model IEnumerable<Tiss_HealthQuestionnaire.Models.PastDrugs>
@{
    Layout = "~/Views/Shared/_HealthLayout.cshtml";
}
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>過去一年常規使用的藥物</title>
</head>
<body>
    <div class="p-4">
        <h3 class="text-xl font-bold mb-4">藥物史：過去一年常規使用的藥物 Regularly Used Drugs in the Past Year</h3>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-300">
                <thead>
                    <tr class="bg-gray-100">
                        <th class="border border-gray-300 px-4 py-2">項目 Item</th>
                        <th class="border border-gray-300 px-4 py-2 text-center">是否使用過 Use</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-100">
                            <td class="border border-gray-300 px-4 py-2">
                                <span class="block font-medium">@item.ItemZh</span>
                                <span class="block text-sm text-gray-600">@item.ItemEn</span>
                            </td>
                            <td class="border border-gray-300 px-4 py-2 text-center">
                                <input type="checkbox" name="usedDrugs_@item.ID" class="form-checkbox h-5 w-5 text-blue-600">
                                <label class="ml-2">是</label>
                            </td>
                        </tr>
                    }

                    <!-- 其他欄位 -->
                    <tr class="hover:bg-gray-100">
                        <td class="border border-gray-300 px-4 py-2">
                            <span class="block font-medium">其他 Others，請詳述：</span>
                        </td>
                        <td class="border border-gray-300 px-4 py-2">
                            <div class="flex items-center">
                                <input type="checkbox" name="usedDrugs_other" class="form-checkbox h-5 w-5 text-blue-600">
                                <input type="text" name="otherDrugsDetail" class="border rounded p-2 ml-2 w-full" placeholder="請描述...">
                            </div>
                        </td>
                    </tr>

                    <!-- TUE 欄位 -->
                    <tr class="hover:bg-gray-100">
                        <td class="border border-gray-300 px-4 py-2">
                            <span class="block font-medium">是否有申請治療用途豁免？(Therapeutic Use Exemption, TUE)</span>
                        </td>
                        <td class="border border-gray-300 px-4 py-2">
                            <div class="flex items-center space-x-4">
                                <label class="flex items-center">
                                    <input type="radio" name="TUE" value="yes" class="form-radio h-5 w-5 text-blue-600">
                                    <span class="ml-2">是</span>
                                </label>
                                <label class="flex items-center">
                                    <input type="radio" name="TUE" value="no" class="form-radio h-5 w-5 text-blue-600">
                                    <span class="ml-2">否</span>
                                </label>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
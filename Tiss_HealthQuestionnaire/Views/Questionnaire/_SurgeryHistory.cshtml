@model IEnumerable<Tiss_HealthQuestionnaire.Models.SurgeryHistory>
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>手術病史</title>
    @*<script src="https://cdn.tailwindcss.com"></script>*@
</head>
<body class="p-4 font-sans">

    <h3 class="text-lg md:text-xl font-bold mb-4">手術病史 Surgery History</h3>

    <div class="overflow-x-auto">
        <table class="min-w-full border border-gray-300">
            <thead>
                <tr class="bg-gray-200">
                    <th class="border border-gray-300 px-4 py-2">部位 Parts of the Body</th>
                    <th class="border border-gray-300 px-4 py-2">是否有接受手術 Receiving Operation</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-100">
                        <td class="border border-gray-300 px-4 py-2">
                            <span class="block font-medium">@item.PartsOfBodyZh</span>
                            <span class="block text-sm text-gray-600">@item.PartsOfBodyEn</span>
                        </td>
                        <td class="border border-gray-300 px-4 py-2 text-center">
                            <label class="inline-flex items-center">
                                <input type="radio" name="surgeryHistory_@item.ID" value="yes" class="form-radio h-5 w-5 text-blue-600">
                                <span class="ml-2">是</span>
                            </label>
                            <label class="inline-flex items-center ml-4">
                                <input type="radio" name="surgeryHistory_@item.ID" value="no" class="form-radio h-5 w-5 text-blue-600">
                                <span class="ml-2">否</span>
                            </label>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
@model IEnumerable<Tiss_HealthQuestionnaire.Models.PastHealth>
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="p-4">
        <h1 class="text-xl font-bold mb-4">過去兩年內的健康檢查是否有異常項目?</h1>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-300">
                <thead>
                    <tr class="bg-gray-100">
                        <th class="border border-gray-300 px-4 py-2">項目 Item</th>
                        <th class="border border-gray-300 px-4 py-2">否 No</th>
                        <th class="border border-gray-300 px-4 py-2">是 Yes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-100">
                            <td class="border border-gray-300 px-4 py-2">
                                <span class="block font-medium">@item.ItemZh</span>
                                <span class="block text-sm text-gray-600">@item.ItemEn</span>
                            </td>
                            <td class="border border-gray-300 px-4 py-2 text-center">
                                <!-- 根據 IsNo 的布林值設置 checked -->
                                <input type="radio" id="pastHealth_no_@item.ID" name="PastHealthHistory_@item.ID" value="no" class="form-radio h-5 w-5 text-blue-600" @(item.IsNo.HasValue && item.IsNo.Value ? "checked" : "")>
                                <label for="pastHealth_no_@item.ID">否</label>
                            </td>
                            <td class="border border-gray-300 px-4 py-2 text-center">
                                <!-- 根據 IsYes 的布林值設置 checked -->
                                <input type="radio" id="pastHealth_yes_@item.ID" name="PastHealthHistory_@item.ID" value="yes" class="form-radio h-5 w-5 text-blue-600" @(item.IsYes.HasValue && item.IsYes.Value ? "checked" : "")>
                                <label for="pastHealth_yes_@item.ID">是</label>

                                <div class="space-y-1 mt-2">
                                    <input type="text" name="item1_@item.ID" class="border rounded p-2 w-full" placeholder="請填寫..." @(item.IsYes.HasValue && item.IsYes.Value ? "" : "disabled")>
                                    <input type="text" name="item2_@item.ID" class="border rounded p-2 w-full" placeholder="請填寫..." @(item.IsYes.HasValue && item.IsYes.Value ? "" : "disabled")>
                                    <input type="text" name="item3_@item.ID" class="border rounded p-2 w-full" placeholder="請填寫..." @(item.IsYes.HasValue && item.IsYes.Value ? "" : "disabled")>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
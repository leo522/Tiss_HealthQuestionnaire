@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>系統維護中</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .error-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

            .error-container img {
                max-width: 100%;
                height: auto;
            }

        h1 {
            font-size: 3rem;
            color: #333;
            margin-bottom: 10px;
        }

        p {
            font-size: 1.2rem;
            color: #666;
            margin-bottom: 20px;
        }

        a {
            font-size: 1rem;
            color: #007bff;
            text-decoration: none;
            padding: 10px 20px;
            border: 2px solid #007bff;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            a:hover {
                background-color: #007bff;
                color: white;
            }
    </style>
</head>
<body>
    <div class="error-container">
        <img src="~/img/Mantenance.jpg" alt="系統維護中" title="系統維護中" />
        <h1>系統維護中</h1>
        <a href="@Url.Action("Main", "Questionnaire")" title="回首頁">回首頁</a>
    </div>
</body>
</html>
@model Tiss_HealthQuestionnaire.ViewModels.TeamViewModel
@{
    ViewBag.Title = "新增隊伍";
    Layout = "~/Views/Shared/_HealthLayout.cshtml";
}
<link rel="icon" href="~/img/favicon.svg" />
<h1 class="text-2xl font-bold mb-4">新增隊伍</h1>

@using (Html.BeginForm("CreateTeam", "AdminTeam", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="TeamName">隊伍名稱</label>
        @Html.TextBoxFor(m => m.TeamName, new { @class = "form-control", placeholder = "請輸入隊伍名稱" })
        @Html.ValidationMessageFor(m => m.TeamName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="SportType">運動類別</label>
        @Html.TextBoxFor(m => m.SportType, new { @class = "form-control", placeholder = "請輸入運動類別" })
        @Html.ValidationMessageFor(m => m.SportType, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">儲存</button>
    <a href="@Url.Action("TeamList", "AdminTeam")" class="btn btn-secondary ml-2">返回</a>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
